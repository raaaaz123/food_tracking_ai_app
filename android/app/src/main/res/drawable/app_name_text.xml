<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="240dp"
        android:height="80dp"
        android:gravity="center">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <gradient
                android:type="linear"
                android:startColor="#5E17EB"
                android:endColor="#8C52FF"
                android:angle="135" />
            <padding
                android:bottom="16dp"
                android:left="16dp"
                android:right="16dp"
                android:top="16dp" />
        </shape>
    </item>
</layer-list> 